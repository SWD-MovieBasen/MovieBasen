

@*conde inspired from .http://www.dotnetfunda.com/articles/show/2898/working-with-roles-in-aspnet-identity-for-mvc*@
@if (ViewBag.listRole != null)
{
    <div>
        <h3> Roller </h3>
        <ol>
            @foreach (var roles in ViewBag.listRole)
            {
                <li>
                    @roles
                </li>
            }
        </ol>
    </div>
}
<hr />

<h3>Add Role</h3>

<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div>
        Role Name
    </div>

    <p>
        @Html.TextBox("RoleNamn")
    </p>
    <input type="submit" value="Save" />
}
<br /><br />
@Html.ActionLink("Role And User List", "RoleUserIndex") 
